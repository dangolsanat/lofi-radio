{
  "manifest_version": 2,
  "name": "Lo-Fi Radio",
  "version": "1.0",
  "description": "Stream Lo-Fi music using YouTube API.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.googleapis.com/*", "https://www.youtube.com/*"],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' https://www.youtube.com; object-src 'self'"
}
